#!/bin/sh
docker image inspect $USER/rust:1.88 > /dev/null \
|| \
docker build \
	-q \
	-t $USER/rust:1.88 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/rust-docker/ \
&& \
mkdir -p \
	$HOME/Projects/ \
&& \
docker run \
	-it \
	--hostname rust \
	--rm \
	--name rust \
	-v $HOME/Projects/:$HOME/Projects/ \
	-v $HOME/Public/:$HOME/Public/ \
	-w $PWD \
	-e TERM=$TERM \
	$USER/rust:1.88 \
	bash
