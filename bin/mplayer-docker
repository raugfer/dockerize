#!/bin/sh
docker build \
	-q \
	-t $USER/mplayer:1.5 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/mplayer-docker/ \
&& \
mkdir -p \
	$HOME/Downloads/ \
	$HOME/Movies/ \
	/media/ \
&& \
docker run \
	-it \
	--rm \
	--name mplayer \
	--hostname mplayer \
	--ipc=host \
	--network=none \
	-e DISPLAY \
	-e TERM=$TERM \
	-e PULSE_SERVER=unix:/run/user/1000/pulse/native \
	-w $PWD \
	-v $HOME/Downloads/:$HOME/Downloads/ \
	-v $HOME/Movies/:$HOME/Movies/ \
	-v /media/:/media/ \
	-v /tmp/.X11-unix/:/tmp/.X11-unix/:ro \
	-v /run/user/1000/pulse/native:/run/user/1000/pulse/native \
	$USER/mplayer:1.5
