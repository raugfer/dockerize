#!/bin/sh
docker build \
	-q \
	-t $USER/node:18.20.0 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/node-docker/
mkdir -p $HOME/Projects/
docker run \
	-it \
	--hostname node \
	--rm \
	--name node \
	--network=host \
	-v $HOME/Projects/:$HOME/Projects/ \
	-w $PWD \
	-e TERM=$TERM \
	$USER/node:18.20.0 \
	bash
