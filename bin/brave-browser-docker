#!/bin/sh
docker build \
	-q \
	-t $USER/brave-browser:1.69.160 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/brave-browser-docker/ \
&& \
mkdir -p \
	$HOME/.config/dockerize/brave-browser/ \
	$HOME/Downloads/ \
&& \
docker run \
	-d \
	--rm \
	--name brave-browser \
	--cap-add SYS_ADMIN \
	-e DISPLAY \
	-e TZ \
	-v $HOME/.config/dockerize/brave-browser/:$HOME/.config/BraveSoftware/Brave-Browser/ \
	-v $HOME/Downloads/:$HOME/Downloads/ \
	-v /tmp/.X11-unix/:/tmp/.X11-unix/:ro \
	-v /etc/localtime:/etc/localtime:ro \
	-v /run/dbus/:/run/dbus/ \
	-v /dev/shm/:/dev/shm/ \
	--device /dev/dri \
	--device /dev/snd \
	--device /dev/video0 \
	--memory=8g \
	$USER/brave-browser:1.69.160
