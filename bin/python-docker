#!/bin/sh
docker build \
	-q \
	-t $USER/python:3.10.4 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/python-docker/
mkdir -p $HOME/Projects/
docker run \
	-it \
	--hostname python \
	--rm \
	--name python \
	-v $HOME/Projects/:$HOME/Projects/ \
	-w $PWD \
	-e TERM=$TERM \
	-e DISPLAY \
	-v /tmp/.X11-unix/:/tmp/.X11-unix/ \
	$USER/python:3.10.4 \
	bash
